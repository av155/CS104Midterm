// colorPreferences.js

// Create an array to store favorite colors
let favoriteColors = [];

// Loop to get three color inputs from the user
for (let i = 0; i < 3; i++) {
    let color = prompt(`Enter your favorite color (${i + 1}/3):`);
    favoriteColors.push(color); // Add the color to the array
}

// Log the updated list of favorite colors
console.log("Your favorite colors are:", favoriteColors);
