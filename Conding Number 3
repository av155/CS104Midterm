// userAgeCategory.js

// Prompt the user to enter their age
let age = prompt("Enter your age:");
age = parseInt(age); // Convert input to an integer

// Determine and log the age category
if (age < 5) {
    console.log("You are categorized as: Toddler");
} else if (age >= 5 && age <= 12) {
    console.log("You are categorized as: Child");
} else if (age >= 13 && age <= 19) {
    console.log("You are categorized as: Teenager");
} else if (age >= 20 && age <= 35) {
    console.log("You are categorized as: Young Adult");
} else if (age >= 36 && age <= 60) {
    console.log("You are categorized as: Middle-Aged");
} else if (age > 60) {
    console.log("You are categorized as: Senior");
} else {
    console.log("Invalid age entered.");
}
